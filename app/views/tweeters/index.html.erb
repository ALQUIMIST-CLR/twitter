<p id="notice"><%= notice %></p>

<h1 class="titulo pt-5 pb-3">Tweets</h1>

<table class="subtitulo">
  <thead>
    <tr>
      <th class="h4">Content</th>
      <th class="h4">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweeters.each do |tweeter| %>
      <tr>
        <td class="h4 pr-5"><%= tweeter.content %></td>
        <td class="h4 pr-5"><%= tweeter.user_id %></td>
        <td class="h4 pr-5"><%= tweeter.user.username %></td>
        <td class="h4 pr-3"><%= link_to 'Show', tweeter %></td>
        <td class="h4 pr-3"><%= link_to 'Edit', edit_tweeter_path(tweeter) %></td>
        <td class="h4 pr-3"><%= link_to 'Destroy', tweeter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweeter_path, :class => " link text-success" %> |
<%= link_to 'Home', root_path, :class=> " link text-success" %>

