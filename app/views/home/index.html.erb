<div class="paginas">   
<div class=" col-12 py-3 px-5 mt-3 bg-dark">   
   <% if user_signed_in? %>
      <%= render 'tweeters/form', tweeter: @tweeter %>
   <% end %>

   <div class="w-100 mt-2">
      <%= form_tag(root_path, method: :get) do %>
         <div class="form-group">
           <%= link_to "Limpiar", root_path, :class => "btn btn-info float-rigth ml-2" %>
           <%= submit_tag("Buscar", :class => "ml-2 btn btn-primary text-white float-rigth") %>
           <%= text_field_tag(:search, params[:search], :class => "w-50  form-control d-inline") %>
         </div>
      <% end %>
   </div>

   <div class="tweets">
   <% @tweeters.each do |tweet| %>
       <%= render 'tweeters/single_tweet', tweet: tweet %>  
   <% end %>
   </div>
</div>
   <hr/>

   <div class="pag col-md-4">
     <%= paginate @tweeters %>
     <%= link_to_next_page @tweeters, 'Mostrar mÃ¡s', :class => "text-success pb-5" %>
   </div>

</div>

